<div class= "container bg-light">
  <div class = "bg-primary">
    <div class= "h1 text-center text-light">
      Welcome <%= current_user.username%> to your transactions.  
    </div>
    <div class= "text-center py-1 text-light">
      Your total is : $<%= @sum %>
    </div>
  </div>


<div class= "align-content-left">
  <div class = "flex flex-column">
    <% @transactions.each do |transaction| %>
      <div class = "d-flex border mt-2 mb-2 p-3">
        <% if !transaction.groups.first.nil? %>
          <div class = "pr-2">
          Name:  <%= transaction.name %>
          </div>
          <div class = "pr-2">
          Amount: <%= transaction.amount %>
          </div>
          <div class = "pr-2">
          Date: <%= transaction.date%>
          </div>
          <div class = "pr-2">
          Group: <%= transaction.groups.first.name%>
          </div>
        <% else%>
           <div class = "pr-2">
          Name:  <%= transaction.name %>
          </div>
          <div class = "pr-2">
          Amount: <%= transaction.amount %>
          </div>
          <div class = "pr-2">
          Date: <%= transaction.date%>
          </div>
          <div class = "pr-2">
          Group: None
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class= "text-center">  
  <%= link_to  'Add new', new_bdraft_path , class: "btn btn-primary btn-block align-center"%>
  <%= link_to  "Back", user_index_path , class: "btn btn-primary btn-block align-center" %>
</div>

</div>