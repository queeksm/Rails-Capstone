<div class = "bg-light">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class = "d-flex bg-standard text-light justify-contents-end">
      <div class = "w-25">        
        <%= link_to  "Back", root_path , class: "btn w-button btn-block align-center font-size-2" %>
      </div>
      <div class = "d-flex w-50 upper-menu">Register</div>
      <div class="w-25">
        <%= f.submit "Sign Up", class: "btn w-button font-size-2" %>
      </div>
    </div>

    <div class="border-top mt-4"> 
      <%= f.text_field :username, autofocus: true, class: "field px-2 py-4", placeholder: "Username" %>
    </div>
    
    <div class="border-top">      
      <%= f.email_field :email, autofocus: true, class: "field px-2 py-4", placeholder: "Email" %>
    </div>

    <div class="border-top">
      <%= f.password_field :password, class: "field px-2 py-4", placeholder: "Password (6 characters minimum)" %>
    </div>

    <div class="border-top">
      <%= f.password_field :password_confirmation, class: "field px-2 py-4", placeholder: "Confirm Password" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>